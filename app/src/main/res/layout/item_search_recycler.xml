<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/padding_8">


    <ImageView
        android:id="@+id/trackAva"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/track_icon" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:lines="1"
        android:textColor="@color/search_result_track_text_color"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toStartOf="@+id/moreImageViewButton"
        app:layout_constraintStart_toEndOf="@id/trackAva"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/ArtistNameTrackTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:lines="1"
        android:textColor="@color/search_result_artist_text_color"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintEnd_toStartOf="@+id/moreImageViewButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/trackAva"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/moreImageViewButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/arrow_forward"
        android:padding="6dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/settings_icon_color" />


</androidx.constraintlayout.widget.ConstraintLayout>


