<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/libraryFragment">
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.sakal.playlistmaker.media_library.ui.fragment.LibraryFragment"
        android:label="@string/label_library"
        tools:layout="@layout/fragment_library" >
        <action
            android:id="@+id/action_libraryFragment_to_audioPlayer"
            app:destination="@id/audioPlayer"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_libraryFragment_to_newPlaylistFragment"
            app:destination="@+id/newPlaylist"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_libraryFragment_to_playlistFragment"
            app:destination="@id/playlistFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/newPlaylist"
        android:name="com.sakal.playlistmaker.new_playlist.ui.fragment.NewPlaylistFragment"
        android:label="@string/label_newPlaylistFragment"
        tools:layout="@layout/fragment_new_playlist"/>
    <dialog
        android:id="@+id/bottomSheetPlaylists"
        android:name="com.sakal.playlistmaker.media_library.ui.bottom_sheet.PlaylistsBottomSheet"
        android:label="BottomSheetPlaylists" >
        <action
            android:id="@+id/action_bottomSheet_to_newPlaylist"
            app:destination="@id/newPlaylist"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </dialog>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.sakal.playlistmaker.search.ui.fragment.SearchFragment"
        android:label="@string/label_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_audioPlayer"
            app:destination="@id/audioPlayer"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.sakal.playlistmaker.settings.ui.fragment.SettingsFragment"
        android:label="@string/label_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/audioPlayer"
        android:name="com.sakal.playlistmaker.player.ui.fragment.AudioPlayerFragment"
        android:label="@string/label_player"
        tools:layout="@layout/fragment_audioplayer">
        <action
            android:id="@+id/action_audioPlayerFragment_to_bottomSheet"
            app:destination="@id/bottomSheetPlaylists" />
    </fragment>

    <fragment
        android:id="@+id/playlistFragment"
        android:name="com.sakal.playlistmaker.media_library.ui.playlist.PlaylistFragment"
        android:label="fragment_playlist_menu"
        tools:layout="@layout/fragment_playlist" >
        <action
            android:id="@+id/action_playlistFragment_to_audioPlayer"
            app:destination="@id/audioPlayer"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_playlistFragment_to_bottomSheetPlaylist"
            app:destination="@id/bottomSheetPlaylist" />
        <dialog
            android:id="@+id/bottomSheetPlaylist"
            android:name="com.sakal.playlistmaker.media_library.ui.bottom_sheet.BottomSheetPlaylist"
            android:label="BottomSheetPlaylist" />


    </fragment>


</navigation>