<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">start</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/settings_icon_color</item>
        <item name="android:backgroundTint">@color/settings_button_background_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextTrackView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/search_result_artist_text_color</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ErrorTextPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ErrorButtonPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="DataTrack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ButtonPlayPause">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="maxImageSize">64dp</item>
        <item name="fabCustomSize">84dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="tabLayout">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabMode">fixed</item>
        <item name="fontWeight">500</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="tabPadding">@dimen/padding_16</item>
    </style>

    <style name="tabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="fontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textPanelHeader">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="panelHeaderToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_4</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="titleTextAppearance">@style/textPanelHeader</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/margin_16</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>

    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_16</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_16</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="YSRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="PlaylistName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlaylistDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="button_info_playlist">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingTop">@dimen/margin_20</item>
        <item name="android:paddingBottom">@dimen/margin_20</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SearchResultItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="android:backgroundTint">@color/settings_button_background_color</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_weight">0</item>
    </style>

</resources>